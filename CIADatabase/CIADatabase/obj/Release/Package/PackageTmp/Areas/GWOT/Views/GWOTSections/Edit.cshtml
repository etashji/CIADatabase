@model CIADatabase.Areas.GWOT.GWOTSections

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Users/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">@Model.Title</h2>

<div class="d-flex justify-content-center">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal text-center">
            <h4 class="text-center">Edit Section</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })
            @Html.HiddenFor(model => model.SectionId)

            <!-- Title -->
            <div class="form-group text-center">
                @Html.LabelFor(model => model.Title, "Title", new { @class = "control-label mb-2" })
                <div class="d-flex justify-content-center">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control text-center", style = "max-width: 300px; background-color: white;" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Save Button -->
            <div class="form-group text-center mt-4">
                <button type="submit" class="btn custom-btn btn-lg w-100" style="max-width: 300px;">Save</button>
                <div class="mt-2">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn custom-btn btn-lg w-100", style = "max-width: 300px;" })
                </div>
            </div>
        </div>
    }
</div>
