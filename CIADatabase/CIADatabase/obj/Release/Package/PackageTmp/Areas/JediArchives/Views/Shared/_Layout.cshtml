<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Jedi Archives</title>
    <link rel="icon" type="image/png" href="~/Content/images/JediLogo.png" />
    @Styles.Render("~/Content/jedi")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet">
    <!-- Lightbox CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/css/lightbox.min.css" rel="stylesheet">
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
        <div class="container">
            @Html.ActionLink("Jedi Archives", "JediIndex", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <!-- Dropdown for GWOT -->
            <div class="nav-item dropdown">
                <!-- GWOT main link -->
                @Html.ActionLink("Profiles", "Index", "JediProfileSections", new { area = "JediArchives" }, new { @class = "navbar-brand" })
            </div>
                <!-- Dropdown for GWOT -->
                <div class="nav-item dropdown">
                    <!-- GWOT main link -->
                    @Html.ActionLink("Entries", "Index", "JediSections", new { area = "JediArchives" }, new { @class = "navbar-brand" })

                    <!-- Dropdown menu -->
                    <ul class="dropdown-menu" aria-labelledby="gwotDropdown">
                        <li>@Html.ActionLink("Clone Wars", "Details", "JediSections", new { area = "JediArchives" }, new { @class = "dropdown-item" })</li>
                    </ul>
                </div>

                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                    <ul class="navbar-nav">
                        @if (Request.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Sign Out", "Logout", "Users", new { area = "Users" }, new { @class = "navbar-brand" })</li>
                        }
                    </ul>
                </div>
            </div>
</nav>

    <!-- CIA Logo Section -->
    <div class="text-center my-3">
        <img src="~/Content/images/JediLogo.png" alt="CIA Logo" style="max-height: 300px;" class="img-fluid" />
    </div>

    <!-- Large Header -->
    <div class="text-center my-4">
        <h1 class="display-3 fw-bold">Jedi Archives</h1>
    </div>


    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Jedi Archives</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- Bootstrap Bundle JS (includes Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Lightbox JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/js/lightbox.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
