@model IEnumerable<CIADatabase.Areas.JediArchives.JediSection>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/JediArchives/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Jedi Archives</h2>

@if (Request.IsAuthenticated)
{
    <div class="d-flex justify-content-center mb-4">
        @Html.ActionLink("Add Section", "Create", null, new { @class = "btn btn-glow" })
    </div>
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 mb-3 d-flex justify-content-center">
                @Html.ActionLink(item.Title, "Details", new { id = item.SectionId }, new { @class = "btn jedi-btn two-thirds-width" })
            </div>
        }
    </div>
</div>
