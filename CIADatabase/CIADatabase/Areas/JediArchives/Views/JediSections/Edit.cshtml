@model CIADatabase.Areas.JediArchives.JediSection

@{
    ViewBag.Title = "Edit Jedi Section";
    Layout = "~/Areas/JediArchives/Views/Shared/_Layout.cshtml";
}

<main class="content-wrapper">
    <section class="form-section">
        <h2 class="section-title">Edit Section</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <!-- Hidden field for SectionId -->
            @Html.HiddenFor(model => model.SectionId)

            <!-- Form Group for Title -->
            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "form-label" })
                <div class="input-container">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control jedi-input" } })
                </div>
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>

            <!-- Save Changes Button -->
            <div class="form-group">
                <div class="btn-container">
                    <input type="submit" value="Save Changes" class="btn-glow" />
                </div>
            </div>
        }

        <!-- Back to List Button -->
        <div class="back-link">
            @Html.ActionLink("Back to Section", "Details", new { id = Model.SectionId }, new { @class = "btn-glow back-button" })
        </div>
    </section>
</main>
