@model CIADatabase.Areas.JediArchives.Models.JediArticle

@{
    ViewBag.Title = "Delete Jedi Article";
    Layout = "~/Areas/JediArchives/Views/Shared/_Layout.cshtml";
}

<div class="d-flex flex-column align-items-stretch mt-5">
    <div class="text-center">
        <h2 class="text-center mb-4">Confirm Delete</h2>
        <h4 class="text-center mb-4">Are you sure you want to delete this entry?</h4>
    </div>

    <!-- Article Information -->
    <div class="form-horizontal w-100" style="max-width: 900px; margin: 0 auto; text-align: center;">
        <h4 class="text-center mb-4">@Model.Title</h4>
        <hr />

        <div class="form-group">
            <p><strong>Order:</strong> @Model.Order</p>
        </div>

        <div class="form-group">
            <p><strong>Planet:</strong> @Model.Planet</p>
        </div>

        <div class="form-group">
            <p><strong>Location:</strong> @Model.Location</p>
        </div>

        <!-- Starmaps -->
        @if (Model.Starmap1 != null || Model.Starmap2 != null || Model.Starmap3 != null)
        {
            <h4 class="text-center mb-4">Starmaps</h4>
            <div class="d-flex justify-content-center align-items-center flex-wrap mb-4">
                @if (Model.Starmap1 != null)
                {
                    <a href="data:image/png;base64,@Convert.ToBase64String(Model.Starmap1)" data-lightbox="starmaps" data-title="Starmap 1">
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model.Starmap1)" alt="Starmap 1" class="img-thumbnail jedi-thumbnail m-2" />
                    </a>
                }
                @if (Model.Starmap2 != null)
                {
                    <a href="data:image/png;base64,@Convert.ToBase64String(Model.Starmap2)" data-lightbox="starmaps" data-title="Starmap 2">
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model.Starmap2)" alt="Starmap 2" class="img-thumbnail jedi-thumbnail m-2" />
                    </a>
                }
                @if (Model.Starmap3 != null)
                {
                    <a href="data:image/png;base64,@Convert.ToBase64String(Model.Starmap3)" data-lightbox="starmaps" data-title="Starmap 3">
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model.Starmap3)" alt="Starmap 3" class="img-thumbnail jedi-thumbnail m-2" />
                    </a>
                }
            </div>
        }

        <!-- Location Maps -->
        @if (Model.LocationMap1 != null || Model.LocationMap2 != null || Model.LocationMap3 != null)
        {
            <h4 class="text-center mb-4">Location Maps</h4>
            <div class="d-flex justify-content-center align-items-center flex-wrap mb-4">
                @if (Model.LocationMap1 != null)
                {
                    <a href="data:image/png;base64,@Convert.ToBase64String(Model.LocationMap1)" data-lightbox="locationmaps" data-title="Location Map 1">
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model.LocationMap1)" alt="Location Map 1" class="img-thumbnail jedi-thumbnail m-2" />
                    </a>
                }
                @if (Model.LocationMap2 != null)
                {
                    <a href="data:image/png;base64,@Convert.ToBase64String(Model.LocationMap2)" data-lightbox="locationmaps" data-title="Location Map 2">
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model.LocationMap2)" alt="Location Map 2" class="img-thumbnail jedi-thumbnail m-2" />
                    </a>
                }
                @if (Model.LocationMap3 != null)
                {
                    <a href="data:image/png;base64,@Convert.ToBase64String(Model.LocationMap3)" data-lightbox="locationmaps" data-title="Location Map 3">
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model.LocationMap3)" alt="Location Map 3" class="img-thumbnail jedi-thumbnail m-2" />
                    </a>
                }
            </div>
        }

        <!-- Briefing -->
        <h4 class="text-center mb-4">Briefing</h4>
        <div class="form-group mb-4 text-left">
            @Html.Raw(Model.Briefing)
        </div>

        <!-- Video -->
        @if (!string.IsNullOrEmpty(Model.Video))
        {
            <h4 class="text-center mb-4">Video</h4>
            <div class="d-flex justify-content-center mb-4">
                <iframe width="560" height="315" src="@Model.Video" frameborder="0" allowfullscreen></iframe>
            </div>
        }

        <!-- After Action Report -->
        <h4 class="text-center mb-4">After Action Report</h4>
        <div class="form-group mb-4 text-left">
            @Html.Raw(Model.AfterActionReport)
        </div>

        <!-- Confirm Delete -->
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group text-center mt-4">
                <input type="submit" value="Delete" class="btn jedi-btn w-50" />
            </div>
        }

        <!-- Back to Details Button -->
        <div class="form-group text-center mt-4">
            @Html.ActionLink(
                "Back to Details",
                "Details",
                "JediArticles",
                new { id = Model.JediArticleId },
                new { @class = "btn jedi-btn w-25" }
            )
        </div>
    </div>
</div>
