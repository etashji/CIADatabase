<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CIA Database</title>
    <link rel="icon" type="image/png" href="~/Content/images/cia-logo.png" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
        <div class="container">
            @Html.ActionLink("CIA Database", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <!-- Dropdown for GWOT -->
            <div class="nav-item">
                <!-- GWOT main link -->
                @Html.ActionLink("GWOT", "GWOT", "GWOTSections", new { area = "GWOT" }, new { @class = "nav-link text-white" })
            </div>

            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                </ul>
                <ul class="navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Sign Out", "Logout", "Users", new { area = "Users" }, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- CIA Logo Section -->
    <div class="text-center my-3">
        <img src="~/Content/images/cia-logo.png" alt="CIA Logo" style="max-height: 300px;" class="img-fluid" />
    </div>

    <!-- Large Header -->
    <div class="text-center my-4">
        <h1 class="display-3 fw-bold">CIA Database</h1>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CIA Database</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- Bootstrap Bundle JS (includes Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
